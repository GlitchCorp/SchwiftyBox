# syntax=docker/dockerfile:1
FROM golang:1.24-alpine

# Install git, ca-certificates, and migrate tool
RUN apk add --no-cache git ca-certificates && \
    go install -tags 'postgres' github.com/golang-migrate/migrate/v4/cmd/migrate@latest && \
    go install github.com/air-verse/air@latest

# Set working directory
WORKDIR /app

# Copy go mod files first (for better caching)
COPY src/go.mod src/go.sum ./

# Download dependencies with cache
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    go mod download

# Copy source code
COPY src/ ./

# Build the application with cache
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    CGO_ENABLED=0 GOOS=linux go build -o schwiftybox .

# Expose port
EXPOSE 8080

# Default command (can be overridden in docker-compose.override.yml)
CMD ["./schwiftybox"]
